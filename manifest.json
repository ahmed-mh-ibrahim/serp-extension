
{
  "manifest_version": 3,
  "name": "SERP Like Automator",
  "author": "Devin Schumacher @ SERP https://serp.co",
  "version": "4",
  "description": "Automating likes/claps/upvotes on medium.com & reddit.com",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/amazon.js"]
    }
  ]
}